{
  "extends": "next/core-web-vitals",
  // ...

  "rules": {
    "react/jsx-no-literals": "error",
    // Consistently import navigation APIs from `@/navigation`
    "no-restricted-imports": [
      "error",
      {
        "name": "next/link",
        "message": "Please import from `@/navigation` instead."
      },
      {
        "name": "next/navigation",
        "importNames": [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ],
        "message": "Please import from `@/navigation` instead."
      }
    ]
  }
}
